create_table "users", force: :cascade do |t|
  t.string "name", limit: 100, null: false
  t.date "birthdate"
  t.string "gender", limit: 50
  t.datetime "created_at", null: false
  t.datetime "updated_at", null: false
  t.index [ "name" ], name: "index_users_on_name"
end

create_table "memos", force: :cascade do |t|
  t.string "title", limit: 255
  t.text "content"
  t.bigint "author_id", null: false
  t.datetime "posted_at", null: false
  t.datetime "created_at", null: false
  t.datetime "updated_at", null: false
  t.index [ "author_id" ], name: "index_memos_on_author_id"
  t.index [ "posted_at" ], name: "index_memos_on_posted_at"
  t.index [ "title" ], name: "index_memos_on_title"
end

create_table "memo_tags", force: :cascade do |t|
  t.string "name", limit: 100, null: false
  t.datetime "created_at", null: false
  t.datetime "updated_at", null: false
  t.index [ "name" ], name: "index_memo_tags_on_name", unique: true
end

create_table "memo_taggings", force: :cascade do |t|
  t.bigint "memo_id", null: false
  t.bigint "memo_tag_id", null: false
  t.datetime "created_at", null: false
  t.datetime "updated_at", null: false
  t.index [ "memo_id", "memo_tag_id" ], name: "unique_memo_tagging", unique: true
  t.index [ "memo_id" ], name: "index_memo_taggings_on_memo_id"
  t.index [ "memo_tag_id" ], name: "index_memo_taggings_on_memo_tag_id"
end
